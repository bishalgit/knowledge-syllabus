<odoo>
    <data>
        <record id="syllabus_view_form" model="ir.ui.view">
            <field name="name">syllabus_minister.syllabus.inherit.view.form</field>
            <field name="model">syllabus_minister.syllabus</field>
            <field name="inherit_id" ref="syllabus_minister.syllabus_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[1]" position="before">
                    <group>
                        <field name="template_id" widget='m2o_image' domain="[('syllabus_template','=',True)]" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                    <button name="onCreateButtonClicked" string="Create/Update Syllabus" type="object" class="btn-primary" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>