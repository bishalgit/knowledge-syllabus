<odoo>
	<data>
		<record id="curriculum_structure" model="ir.ui.view">
			<field name="name">Curriculum Structure</field>
			<field name="type">qweb</field>
			<field name="key">syllabus_template.curriculum_structure</field>
			<field name="syllabus_template">True</field>
			<field name="image" file="syllabus_template/static/img/demo_template.png" type="base64" />
			<field name="arch" type="xml">
				<t name="Curriculum Structure" t-name="syllabus_template.curriculum_structure">
					<p>
						<strong>
							<span style="font-size: 16.0pt; line-height: 107%; font-family: 'Times New Roman',serif;">CURRICULUM STRUCTURE</span>
						</strong>
					</p>
					<table style="border: none; border-collapse: collapse; border: none; width: 100%">
						<tbody>
                            <tr>
                                <th>Foundation Courses</th>
                            </tr>
							<t t-foreach="object.program_id.courseline_ids.course_id" t-as="course">
                                <t t-if="course.course_type == 'Foundation'">
                                    <tr>
                                        <td style="width: 20%;">
                                            <p style="text-align: justify; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_code"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: left; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.name"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: right; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.credit_hours"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <th>Core Courses</th>
                                </tr>
                                <t t-elif="course.course_type == 'Core'">
                                    <tr>
                                        <td style="width: 20%;">
                                            <p style="text-align: justify; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_code"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: left; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.name"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: right; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.credit_hours"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <th>Concentration</th>
                                </tr>
                                <t t-elif="course.course_type == 'Concentration'">
                                    <tr>
                                        <td style="width: 20%;">
                                            <p style="text-align: justify; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_code"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: left; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.name"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: right; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.credit_hours"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <th>Electives</th>
                                </tr>
                                <p style="text-align: justify; font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                    <i>(Any TWO courses from the following list)</i></br>
                                    The courses offered in this area are basically of non-business nature. These are offered
                                    widen the knowledge base of students in social and development issues. A college can also
                                    develop and offer any other non-business elective courseswith the prior approval of the
                                    Subject Committee and the Dean.
                                </p>
                                <t t-elif="course.course_type == 'Elective'">
                                    <tr>
                                        <td style="width: 20%;">
                                            <p style="text-align: justify; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_code"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: left; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.name"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                        <td style="width: 40%;">
                                            <p style="text-align: right; line-height: normal;">
                                                <strong>
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.credit_hours"/>
                                                    </span>
                                                </strong>
                                            </p>
                                        </td>
                                    </tr>
                                </t>
							</t>
						</tbody>
					</table>
			</field>
		</record>
	</data>
</odoo>