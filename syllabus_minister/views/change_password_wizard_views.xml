<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- change password wizard -->
        <record id="syllabus_minister_change_password_wizard_view" model="ir.ui.view">
            <field name="name">Syllabus Minister Change Password</field>
            <field name="model">syllabus_minister.change.password.wizard</field>
            <field name="arch" type="xml">
                <form string="Change Password">
                    <field name="user_ids"/>
                    <footer>
                        <button string="Change Password" name="change_password_button" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>