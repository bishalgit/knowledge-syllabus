<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="syllabus_share_display_form" model="ir.ui.view">
            <field name="name">Syllabus Share Display</field>
            <field name="model">syllabus_share.display</field>
            <field name="arch" type="xml">
                <form string="Syllabus Share">
                    <group>
                        <field name="share_link" readonly="1" />
                    </group>
                    <footer>
                        <button string="Close" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_syllabus_share_display_form" model="ir.actions.act_window">
            <field name="name">Syllabus Share</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">syllabus_share.display</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>