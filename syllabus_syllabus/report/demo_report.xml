<odoo>

    <report
        id="report_program_syllabus_demo"
        model="syllabus_minister.program"
        string="Syllabus Demo Program Report"
        name="syllabus_syllabus.report_program_syllabus_demo_view"
        file="syllabus_syllabus.report_program_syllabus_demo"
        report_type="qweb-pdf" />

    <template id="report_program_syllabus_demo_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div style="margin-top: 1.5px; margin-right: 1px; margin-top: 1.5px; margin-bottom: 1px" class="page">
                        <p style="text-align: center;">
                            <strong>
                                <span style="font-size: 16.0pt; line-height: 107%; font-family: 'Times New Roman',serif;">
                                    Pokhara University <br />
                                    <t t-esc="doc.short_form"/> Program <br />
                                    CURRICULAR STRUCTURE AND COURSE CYCLES
                                </span>
                            </strong>
                            <br /><br />
                        </p>
                        <table style="border: none; border-collapse: collapse; border: none; width: 100%">
                            <tbody>
                                <t t-set="leftValue" t-value=""/>
                                <t t-esc="leftValue"/>
                                <t t-set="rightValue" t-value=""/>
                                <t t-foreach="doc.semester_id" t-as="semester">
                                    <t t-if="semester_odd" t-set="leftValue" t-value="semester"/>
                                    <t t-if="semester_even" t-set="rightValue" t-value="semester"/>
                                    <t t-if="semester_even OR semester_last">
                                        <tr>
                                            <td t-if="leftValue != ''">
                                                <table style="border: none; border-collapse: collapse; border: none; width:100%;">
                                                    <tbody>
                                                        <tr style="border-top: 1px solid #ddd;">
                                                            <th colspan="3" style="text-align: center;">Semester <t t-esc="leftValue.name"/></th>
                                                        </tr>
                                                        <tr style="border-bottom: 1px solid #ddd;">
                                                            <th style="font-family: 'Times New Roman',serif; text-align:center;">Course Code</th>
                                                            <th style="font-family: 'Times New Roman',serif; text-align:center;">Course Description</th>
                                                            <th style="font-family: 'Times New Roman',serif; text-align:right;">Credit Hours</th>
                                                        </tr>
                                                        <t t-foreach="doc.courseline_ids" t-as="course">
                                                            <tr>
                                                                <t t-if="course.semester == leftValue">
                                                                    <td>
                                                                        <p style="text-align:center; line-height: normal;">
                                                                            <span style="font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.course_code"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                    <td>
                                                                        <p style="text-align:center; line-height: normal;">
                                                                            <span style="font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.name"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                    <td>
                                                                        <p style="text-align:right; line-height: normal;">
                                                                            <span style=" font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.credit_hours"/>
                                                                                <t t-esc="i"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                </t>
                                                            </tr>
                                                        </t>
                                                        <tr>
                                                            <th colspan="3"  style="border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; text-align: right;"><t t-esc="doc._compute_semester_total_credit(semester.id)"/></th>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                            <td t-if="rightValue != ''">
                                                <table style="border: none; border-collapse: collapse; border: none; width:100%;">
                                                    <tbody>
                                                        <tr style="border-top: 1px solid #ddd;">
                                                            <th colspan="3" style="text-align: center;">Semester <t t-esc="rightValue.name"/></th>
                                                        </tr>
                                                        <tr style="border-bottom: 1px solid #ddd;">
                                                            <th style="font-family: 'Times New Roman',serif; text-align:center;">Course Code</th>
                                                            <th style="font-family: 'Times New Roman',serif; text-align:center;">Course Description</th>
                                                            <th style="font-family: 'Times New Roman',serif; text-align:right;">Credit Hours</th>
                                                        </tr>
                                                        <t t-foreach="doc.courseline_ids" t-as="course">
                                                            <tr>
                                                                <t t-if="course.semester == rightValue">
                                                                    <td>
                                                                        <p style="text-align:center; line-height: normal;">
                                                                            <span style="font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.course_code"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                    <td>
                                                                        <p style="text-align:center; line-height: normal;">
                                                                            <span style="font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.name"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                    <td>
                                                                        <p style="text-align:right; line-height: normal;">
                                                                            <span style=" font-family: 'Times New Roman',serif;">
                                                                                <t t-esc="course.course_id.credit_hours"/>
                                                                            </span>
                                                                        </p>
                                                                    </td>
                                                                </t>
                                                            </tr>
                                                        </t>
                                                        <tr>
                                                            <th colspan="3"  style="border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; text-align: right;"><t t-esc="doc._compute_semester_total_credit(semester.id)"/></th>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                            <t t-if="semester_odd" t-set="leftValue" t-value=""/>
                                            <t t-if="semester_even" t-set="rightValue" t-value=""/>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
