<odoo>
    <report
        id="report_program_curriculum"
        model="syllabus_minister.program"
        string="Curriculum Program Report"
        name="syllabus_syllabus.report_program_curriculum_view"
        file="syllabus_syllabus.report_program_curriculum"
        report_type="qweb-pdf" />

    <template id="report_program_curriculum_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <p>
						<strong>
							<span style="font-size: 16.0pt; line-height: 107%; font-family: 'Times New Roman',serif; text-transform: uppercase">CURRICULUM STRUCTURE OF <t t-esc="doc.name"/></span>
						</strong>
					    </p>
                        <table style="border: none; border-collapse: collapse; border: none; width: 100%">
                            <tbody>
                                <tr>
                                    <th colspan="2" style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">Foundation Courses</th>
                                    <th style="text-align: right; font-size: 14.0pt; font-family: 'Times New Roman',serif;">(<t t-esc="doc.total_foundation_cr_hr"/> Credit Hours)</th>
                                </tr>
                                <t t-foreach="doc.courseline_ids" t-as="course">
                                    <t t-if="course.course_id.course_type == 'Foundation'">
                                        <tr>
                                            <td style="width: 20%;">
                                                <p style="text-align: justify; line-height: normal;">
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_id.course_code"/>
                                                    </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: left; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.name"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: right; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.credit_hours"/>
                                                        </span>
                                                </p>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <th colspan="2" style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">Core Courses</th>
                                    <th style="text-align: right; font-size: 14.0pt; font-family: 'Times New Roman',serif;">(<t t-esc="doc.total_core_cr_hr"/> Credit Hours)</th>
                                </tr>
                                <t t-foreach="doc.courseline_ids" t-as="course">
                                    <t t-if="course.course_id.course_type == 'Core'">
                                        <tr>
                                            <td style="width: 20%;">
                                                <p style="text-align: justify; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.course_code"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: left; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.name"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: right; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.credit_hours"/>
                                                        </span>
                                                </p>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <th colspan="2" style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">Concentration</th>
                                    <th style="text-align: right; font-size: 14.0pt; font-family: 'Times New Roman',serif;">(<t t-esc="doc.total_concentration_cr_hr"/> Credit Hours)</th>
                                </tr>
                                <t t-foreach="doc.courseline_ids" t-as="course">
                                    <t t-if="course.course_id.course_type == 'Concentration'">
                                        <tr>
                                            <td style="width: 20%;">
                                                <p style="text-align: justify; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.course_code"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: left; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.name"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: right; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.credit_hours"/>
                                                        </span>
                                                </p>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <th colspan="2" style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">Electives</th>
                                    <th style="text-align: right; font-size: 14.0pt; font-family: 'Times New Roman',serif;">(<t t-esc="doc.total_elective_cr_hr"/> Credit Hours)</th>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                    <p style="text-align: justify; font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                        <i>(Any TWO courses from the following list)</i><br />
                                        The courses offered in this area are basically of non-business nature. These are offered
                                        widen the knowledge base of students in social and development issues. A college can also
                                        develop and offer any other non-business elective courseswith the prior approval of the
                                        Subject Committee and the Dean.
                                    </p>
                                    </td>
                                </tr>
                                <t t-foreach="doc.courseline_ids" t-as="course">
                                    <t t-if="course.course_id.course_type == 'Elective'">
                                        <tr>
                                            <td style="width: 20%;">
                                                <p style="text-align: justify; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.course_code"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: left; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.name"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: right; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.credit_hours"/>
                                                        </span>
                                                </p>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <th colspan="2" style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">Project Work and Internship</th>
                                    <th style="text-align: right; font-size: 14.0pt; font-family: 'Times New Roman',serif;">(<t t-esc="doc.total_project_cr_hr"/> Credit Hours)</th>
                                </tr>
                                <t t-foreach="doc.courseline_ids" t-as="course">
                                    <t t-if="course.course_id.course_type == 'Project Work and Internship'">
                                        <tr>
                                            <td style="width: 20%;">
                                                <p style="text-align: justify; line-height: normal;">
                                                    <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                        <t t-esc="course.course_id.course_code"/>
                                                    </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: left; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.name"/>
                                                        </span>
                                                </p>
                                            </td>
                                            <td style="width: 40%;">
                                                <p style="text-align: right; line-height: normal;">
                                                        <span style="font-size: 14.0pt; font-family: 'Times New Roman',serif;">
                                                            <t t-esc="course.course_id.credit_hours"/>
                                                        </span>
                                                </p>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>